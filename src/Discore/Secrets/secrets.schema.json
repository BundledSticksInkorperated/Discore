{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Secrets",
    "description": "Secrets Schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "default": {
                "type": "boolean",
                "description": "Default Bot to login as"
            },
            "name": {
                "type": "string",
                "description": "Bot Name"
            },
            "config": {
                "type": "object",
                "description": "Config Settings",
                "properties": {
                    "tokens": {
                        "type": "array",
                        "description": "Bot Tokens",
                        "items": {
                            "properties": {
                                "debug": {
                                    "type": "boolean",
                                    "description": "Should the bot run in debug mode"
                                },
                                "token": {
                                    "type": "string",
                                    "description": "Bot Client Token"
                                },
                                "prefix": {
                                    "type": "string",
                                    "description": "Bot Command Prefix Char",
                                    "maxLength": 1
                                }

                            },
                            "required": [ "debug", "token" ]
                        }

                    }
                }
            }
        },
        "required": [ "name", "config" ]
    }
}
